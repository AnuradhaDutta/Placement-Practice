import java.util.*;

class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        int sum=0;
        while(num!=0)
        {
        int digits = num%10;
        sum +=digits;
        num=num/10;
        }
        System.out.println(sum);
    }
}
